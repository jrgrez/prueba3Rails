<h1>Canciones</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Duración</th>
      <th>Género</th>
      <th>¿Agregar?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.duration %></td>
        <td><%= song.genre.name %></td>
         <td>
             <%= link_to "Si", user_songs_path(current_user.id, song: song), method: :post%>
         </td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Cancion', new_song_path, class: "btn btn-default" %>
<%= link_to "Lista de #{current_user.name}", user_songs_path(current_user.id), class: "btn btn-default" %>
